<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirigir todas las solicitudes a la carpeta public si no están ya en ella
    

    # Forzar HTTPS
    #RewriteCond %{HTTPS} !=on
    #RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

    # Redirigir www.sitio.com a sitio.com
    #RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    #RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # Redirigir todo lo que apunte a /public hacia la raíz
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]

    # Redirigir de www a sin www (forzando HTTPS si es necesario)
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

    # Asegurar que Laravel maneje las rutas
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]

    # BLOQUEAR ACCESO A ARCHIVOS SENSIBLES
    <FilesMatch "(\.env|\.htaccess|\.gitignore|composer\.lock|composer\.json|artisan)">
        Require all denied
    </FilesMatch>

    # HABILITAR COMPRESIÓN (Mejor rendimiento)
    #<IfModule mod_deflate.c>
    #    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
    #</IfModule>
</IfModule>

# Habilitar compresión Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript application/javascript application/json application/xml application/rss+xml application/vnd.ms-fontobject application/x-font-ttf application/x-font-woff font/ttf font/woff font/woff2 image/svg+xml
    # Evitar compresión en algunos archivos
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp|avif|zip|gz|rar|bz2|mp4|mp3|woff2)$ no-gzip dont-vary
    Header append Vary: Accept-Encoding
</IfModule>

# Habilitar compresión Brotli (si está disponible)
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/plain text/html text/xml text/css text/javascript application/javascript application/json application/xml application/rss+xml application/vnd.ms-fontobject application/x-font-ttf application/x-font-woff font/ttf font/woff font/woff2 image/svg+xml
    Header append Vary: Accept-Encoding
</IfModule>

